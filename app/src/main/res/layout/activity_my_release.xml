<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.mcc.viewModel.MyReleaseVM"></variable>
    </data>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/left_arrows_grey"
            />
        <TextView
            android:id="@+id/titleName"
            style="@style/A1_Font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="我的发布"
            android:textColor="@color/black" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/my_release"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:onClick="@{vm.publish}"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>
<android.support.design.widget.TabLayout
    android:id="@+id/tablayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:tabMode="fixed"
    app:tabGravity="fill"
    app:tabIndicatorColor="@color/themeColor"
    app:tabSelectedTextColor="@color/themeColor"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <android.support.design.widget.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的闲置"
        />
    <android.support.design.widget.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的动态"
        android:visibility="visible"
        />

</android.support.design.widget.TabLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/my_good_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="@{vm.tabIndex.get()==0 ? View.VISIBLE:View.GONE}"
        />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/my_trend_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="@{vm.tabIndex.get()==1 ? View.VISIBLE:View.GONE}"
        />
</LinearLayout>
</layout>
