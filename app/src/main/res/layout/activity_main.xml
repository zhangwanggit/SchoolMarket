<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="com.mcc.viewModel.MainVM"></variable>
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:id="@+id/contet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />
    <RadioGroup
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dp">


        <RadioButton
            android:id="@+id/homepage"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_homepage_selector"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="首页"
            android:textColor="@drawable/textcolor"
            android:textSize="10dip"
            android:checked="true"
            android:onClick="@{()->vm.showFragment(0)}"/>

        <RadioButton
            android:id="@+id/school"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_college_selector"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="学院"
            android:textColor="@drawable/textcolor"
            android:textSize="10dip"
            android:onClick="@{()->vm.showFragment(1)}"/>
        <!--android:id="@+id/etQuestionAdd"-->

        <RadioButton
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_message_selector"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="消息"
            android:textColor="@drawable/textcolor"
            android:textSize="10dip"
            android:onClick="@{()->vm.showFragment(2)}"/>

        <RadioButton
            android:id="@+id/mine"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_mine_selector"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="我的"
            android:textColor="@drawable/textcolor"
            android:textSize="10dip"
            android:onClick="@{()->vm.showFragment(3)}"/>
    </RadioGroup>

</LinearLayout>
</layout>
