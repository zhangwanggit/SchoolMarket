<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcc.schoolmarket">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name="com.mcc.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/school_mark_ic"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashAcctivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegistActivity" />
        <activity
            android:name=".MineAccountActivity"
            android:label="@string/title_activity_mine_account" />
        <activity
            android:name=".SetNickNameActivity"
            android:label="@string/title_activity_set_nick_name" />
        <activity
            android:name=".AboutSchoolMarketActivity"
            android:label="@string/title_activity_about_school_market" />
        <activity
            android:name=".FeedBackActivity"
            android:label="@string/title_activity_feed_back" />
        <activity
            android:name=".SetSexActivity"
            android:label="@string/title_activity_set_sex" />
        <activity
            android:name=".ChangePasswordActivity"
            android:label="@string/title_activity_change_password" />
        <activity
            android:name=".MyReleaseActivity"
            android:label="@string/title_activity_my_release"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".ReleaseGoodActivity"
            android:label="@string/title_activity_release_good" />
        <activity
            android:name=".GoodDetailActivity"
            android:label="@string/title_activity_good_detail" />
        <activity android:name=".MyCollectActivity" />
        <activity
            android:name=".SearchGoodActivity"
            android:label="@string/title_activity_search_good" />
        <activity
            android:name=".ReleaseTrendActivity"
            android:label="@string/title_activity_release_trend" />
        <activity
            android:name=".TrendDetailActivity"
            android:label="@string/title_activity_trend_detail"></activity>
    </application>

</manifest>